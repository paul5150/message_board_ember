<h1>New Question</h1>

<form>
  <div class="form-group">
    <label for="author">Author</label>
    {{input id="author" class="form-control" value=author}}
  </div>

  <div class="form-group">
    <label for="question">Question</label>
    {{textarea id="question" class="form-control" rows="15" value=question}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>
</form>
